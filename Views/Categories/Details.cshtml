@model Category
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Category Type Details</h2>
<br />

<form asp-action="Detail">
    <div class="form-border">

        <fieldset disabled>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="customer-label"></label>
                </div>
                <div class="col-4">
                    <label asp-for="Name" class="form-control"></label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DisplayOrder" class="customer-label"></label>
                </div>
                <div class="col-4">
                    <label asp-for="DisplayOrder" class="form-control"></label>
                </div>
            </div>

        </fieldset>
    </div>
</form>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
