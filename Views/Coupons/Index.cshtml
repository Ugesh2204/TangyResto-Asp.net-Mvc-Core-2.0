@model IEnumerable<Coupons>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<p>
    <a asp-action="Create" asp-controller="Coupons" class="btn btn-primary">
        <i class="fas fa-plus"></i>
        &nbsp; Create New
    </a>
</p>
<div class="form-border">
    <table class="table">
        <tr>
          
            <td>
                @Html.DisplayNameFor(m => m.Name)

            </td>
            <td>
                @Html.DisplayNameFor(m => m.Discount)
            </td>
            <td>
                @Html.DisplayNameFor(m => m.MinimumAmount)
            </td>
            <td>
                @Html.DisplayNameFor(m => m.IsActive)
            </td>

            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {

        <tr>

            <td>@item.Name</td>
            <td>@item.Discount</td>
            <td>@item.MinimumAmount</td>
            <td>@item.IsActive</td>

            <td>
                <a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.Id)">
                    <i class="fas fa-edit"></i>
                </a>

                <a type="button" class="btn btn-danger" href="@Url.Action("Delete/"+item.Id)">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>

        }


    </table>

</div>

