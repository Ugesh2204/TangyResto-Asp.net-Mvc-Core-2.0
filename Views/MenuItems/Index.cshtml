@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Menu Item List</h2>
<br />


<p>
    @Html.Partial("_CreatedButtonPartial")
</p>
<div class="form-border">
    <table class="table">
        <tr>

            <th>@Html.DisplayNameFor(m => m.Name)</th>

            @*Since we are using Eager loading this will be loaded*@
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
            <th>@Html.DisplayNameFor(m => m.SubCategoryId)</th>

            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
               @item.Name
            </td>

            <td>
                @item.Price
            </td>

            <td>
               @item.Category.Name
            </td>
            <td>
                @item.SubCategory.Name
            </td>

            <td>
                @Html.Partial("_TableButtonPartial", item.Id)
            </td>

        </tr>

        }
    </table>

</div>
